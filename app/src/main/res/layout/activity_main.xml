<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.maruge.marugechat.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo" />



    <Button
        android:id="@+id/btnLogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logar"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Nova Conta ! "
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/txtNovoUsuario"
        />




    <Button
        android:id="@+id/btnNovoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo UsuÃ¡rio"
        />








    <Button
        android:id="@+id/btnNovaPostagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Postagem"
        />
    <Button
        android:id="@+id/btnPostagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postagens"
        />
</LinearLayout>
